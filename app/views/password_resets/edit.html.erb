<div class="container">
  <%= form_for @user, html: {class: "form-signin"} do |f| %>
    <fieldset>
      <legend>Alterar Senha</legend>
      <div class="form-group">
        <%= f.password_field :password, class: "input-block-level", placeholder: "Nova Senha" %>
      </div>
      <button type="submit" class="btn btn-default btn-block">Salvar</button>
    </fieldset>
  <% end %>
</div>