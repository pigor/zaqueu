<%= form_for @collection, url: path, :html => { :class => 'form-horizontal' } do |f| %>

    <%= render "shared/error_messages", :record => @collection %>

    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :class => 'text_field', placeholder: "quem será lembrado?", disabled: !@collection.new_record? %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => 5, :class => 'text_area', placeholder: "o que será lembrado?" %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :deadline, :class => 'control-label' %>
      <div class="controls">
        <div id="deadline-field" class="input-append date">
          <%= f.text_field :deadline, value: @collection.deadline_formatted, :"date-mask" =>"dd/MM/yyyy hh:mm",
               :"data-format" => "dd/MM/yyyy  hh:mm", placeholder: "quando será lembrado?" %>
          <span class="add-on">
            <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
          </span>
        </div>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :repetition, :class => 'control-label' %>
      <div class="controls">
        <%= f.select :repetition, repetition_options, :class => 'select' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Salvar", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => "Cancelar"), root_path, :class => 'btn' %>
    </div>
  <% end %>
