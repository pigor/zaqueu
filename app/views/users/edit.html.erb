<div class="container">
  <%= form_for @user, html: {class: "form-signin"} do |f| %>
    <fieldset>
      <legend>Alterar Senha</legend>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder: "Digite seu Nome", disabled: "disabled" %>
      </div>
      <div class="form-group">
        <%= f.text_field :username, class: "form-control", placeholder: "Digite seu Username", disabled: "disabled" %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder: "Digite seu Email", disabled: "disabled" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "Digite sua Senha" %>
      </div>
      <button type="submit" class="btn btn-default btn-block">Salvar</button>
    </fieldset>
  <% end %>
</div>
